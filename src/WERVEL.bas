30 SCREEN 3: CLS : PI = 3.141593
40 WINDOW (-4 / 3, -1)-(4 / 3, 1)
50 B = .05: REM ***KEUZE ROTATIEHOEK IN RADIALEN***
60 DIM X(4), Y(4): C = 1 / (SIN(B) + COS(B))
70 FOR K = 0 TO 4: T = (2 * K + 1) * PI / 4
80 X(K) = SIN(T): Y(K) = COS(T)
90 NEXT K
100 FOR N = 1 TO 64: PSET (X(0), Y(0))
110 FOR L = 1 TO 4: LINE -(X(L), Y(L))
120 NEXT L
130 FOR M = 0 TO 4: Z = X(M)
140 X(M) = (X(M) * COS(B) - Y(M) * SIN(B)) * C
150 Y(M) = (Z * SIN(B) + Y(M) * COS(B)) * C
160 NEXT M: NEXT N: END

